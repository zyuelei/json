{
  "main": "./index.html",
  "logo": "logo.png",
  "preload": "./preload.js",
  "development": {
    "main": "http://localhost:5173/",
    "preload": "D:\\companies\\tools\\decode_utf8\\dist\\preload.js"
  },
  "pluginSetting": {
    "single": false
  },
  "features": [
    {
      "code": "unicode_decode",
      "explain": "unicode转码",
      "cmds": [{
          "type": "regex",
          "label": "utf8转义",
          "match": "/\\\\u([\\dA-Fa-f]{4})|\\\\x([0-9A-Fa-f]{2})/g"
        }
      ]
    },
    {
      "code": "json_format",
      "explain": "json格式化",
      "cmds": [
        "json",
        "JSON",
        {
          "type": "regex",
          "label": "json",
          "match": "/^\\s*(\\{[\\s\\S]*\\}|\\[[\\s\\S]*\\])\\s*$/"
        }
      ]
    },
    {
      "code": "get_url_to_json",
      "explain": "url参数转json",
      "cmds": [
        {
          "type": "regex",
          "label": "url参数转json",
          "match": "/^(?:[^\\s=&]{1,40}=[^\\s=&]*&)+[^\\s=&]{1,40}=[^\\s=&]*$/"
        }
      ]
    },
    {
      "code": "unserialize_format",
      "explain": "serialize转json",
      "cmds": [
        {
          "type": "regex",
          "label": "serialize转json",
          "match": "/^a:\\d+:{(?:.*;}*)+}$/"
        }
      ]
    }
  ]
}